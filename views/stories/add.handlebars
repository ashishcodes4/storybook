<h1>Add stories</h1>
<div class="row">
  <form action="/stories" method="POST" class="col s12">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title">
        <label for="title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status" id="">
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Un Published</option>
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <p>
          <label>
            <input id="filled-in-box" name="allowComments" type="checkbox" checked="checked" />
            <span>Allow Comments</span>
          </label>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell us your story</h5>
        <textarea name="body"></textarea>
      </div>
    </div>
    <input type="submit" name="submit" value="Submit" class="btn">
    <a href="/dashboard" class="btn red mt-2">Cancel</a>
  </form>
</div>