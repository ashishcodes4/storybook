<h1>Edit stories</h1>
<div class="row">
  <form action="/stories/{{story.id}}?_method=PUT" method="POST" class="col s12">
  <input type="hidden" name="_method" value="PUT">
    <div class="row">
      <div class="input-field">
        <input type="text" name="title" value="{{story.title}}">
        <label for="title">Title</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <select name="status" id="">
          {{#select story.status}}
          <option value="public" selected>Public</option>
          <option value="private">Private</option>
          <option value="unpublished">Un Published</option>
          {{/select}}
        </select>
        <label for="status">Status</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <p>
          <label>
            <input id="filled-in-box" name="allowComments" type="checkbox" {{#if story.allowComments}} checked="checked" {{/if}} />
            <span>Allow Comments</span>
          </label>
        </p>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <h5>Tell us your story</h5>
        <textarea name="body">{{story.body}}</textarea>
      </div>
    </div>
    <input type="submit" name="submit" value="Submit" class="btn">
  </form>
</div>