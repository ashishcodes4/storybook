<h1>Stories page</h1>
<div class="row">
  {{#each stories}}
  <div class="col s12 m4">
    <div class="card">
      <div class="card-image">
        {{#if user}}
          {{{editIcon user.id ../user.id id}}}
        {{/if}}
    </div>
      <div class="card-content center-align">
        <h5>{{title}}</h5>
        <p class="story-text">{{stripTags (truncated body 100)}}</p>
        <br />
        <div class="chip">
          <img src="{{user.image}}" alt="user">
          {{user.firstName}} {{user.lastName}}
        </div>
        <div class="card-action center-align">
          <a href="/stories/show/{{id}}" class="btn">Read More</a>
        </div>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found</p>
  {{/each}}
</div>